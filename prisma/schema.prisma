generator client {
  provider = "prisma-client-js"
}

// Connection URL configuration:
// - Prisma 6: `url` is required here for migrations (keep this)
// - Prisma 7+: `url` can be removed, connection comes from prisma.config.ts
// Runtime queries use prisma.config.ts via PrismaClient datasources
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Required for Prisma 6 migrations
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  passwordHash String?

  preferredLocale   String?
  preferredTimeZone String?

  accounts Account[]
  sessions Session[]
  tasks    Task[] // Temporary - will be removed after migration to projects

  xp Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([identifier])
}

model TaskV2 {
  // Basic
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  xpAward     Int     @default(0)

  // Project relation
  projectId   String @db.ObjectId
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Type
  category    String  @default("Uncategorized")
  optional    Boolean @default(false)

  // Date/Time  
  startDate    DateTime? // Date in UTC (null = no start date)
  hasStartTime Boolean @default(false) // Track if user provided start time
  dueDate      DateTime? // Date in UTC (null = no due date)
  hasDueTime   Boolean @default(false) // Track if user provided due time

  // Status
  completedAt DateTime?
  status      TaskStatus @default(PENDING)

  // Creation
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Task {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String  @db.ObjectId // Tasks belong to projects
  userId      String  @db.ObjectId // Temporary for migration, will be removed later
  title       String
  description String?
  category    String
  xpValue     Int     @default(0)

  // Date/time (separate fields for optional times)
  startDate DateTime? // Date part in UTC (null = no start date)
  startTime String? // Time part as "HH:MM" string (null = no specific time, date-only)
  dueDate   DateTime? // Date part in UTC (null = no due date)
  dueTime   String? // Time part as "HH:MM" string (null = no specific time, date-only)

  // Status
  completedAt DateTime?
  status      String    @default("pending") // 'pending' | 'in_progress' | 'completed' | 'cancelled'

  // Assignment
  assignedUserIds String[] @default([]) @db.ObjectId // Users assigned to this task
  acceptedUserIds String[] @default([]) @db.ObjectId // Users who accepted/claimed this task

  // Recurring pattern (stored as JSON for flexibility)
  recurrencePattern Json? // Optional recurrence pattern for template tasks

  // Recurring instance tracking
  isRecurringInstance   Boolean  @default(false)
  sourceRecurringTaskId String?  @db.ObjectId // Reference to template task
  recurrenceInstanceKey String? // Unique key for this occurrence (e.g., "2025-01-15T09:00:00Z")
  isEditedInstance      Boolean  @default(false) // True if user edited this specific occurrence
  editedInstanceKeys    String[] @default([]) // Array of instance keys that were edited (for template tasks)

  // Creator tracking
  createdBy String @db.ObjectId // User who created the task

  user                User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project             Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sourceRecurringTask Task?   @relation("RecurringSource", fields: [sourceRecurringTaskId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  generatedTasks      Task[]  @relation("RecurringSource")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId]) // Temporary index, will be removed
  @@index([projectId])
  @@index([sourceRecurringTaskId])
  @@index([startDate])
  @@index([projectId, startDate])
  @@index([projectId, completedAt])
  @@index([projectId, dueDate])
  @@index([projectId, category])
  @@index([projectId, status])
  @@index([isRecurringInstance])
  @@index([projectId, isRecurringInstance])
  @@index([createdBy])
}

enum TaskStatus {
  PENDING
  COMPLETED
}

enum ProjectVisibility {
  PRIVATE
  PUBLIC
}

model Project {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  visibility  ProjectVisibility @default(PRIVATE)

  // User roles (using arrays for flexibility)
  adminUserIds       String[] @default([]) @db.ObjectId // Users with admin access
  projectUserIds     String[] @default([]) @db.ObjectId // Users with standard access
  viewerUserIds      String[] @default([]) @db.ObjectId // Users with read-only access
  joinRequestUserIds String[] @default([]) @db.ObjectId // Pending join requests for public projects

  tasks           Task[]
  tasksV2         TaskV2[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([visibility])
}
