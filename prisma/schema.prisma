generator client {
  provider = "prisma-client-js"
}

// Connection URL configuration:
// - Prisma 6: `url` is required here for migrations (keep this)
// - Prisma 7+: `url` can be removed, connection comes from prisma.config.ts
// Runtime queries use prisma.config.ts via PrismaClient datasources
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Required for Prisma 6 migrations
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  passwordHash  String?

  preferredLocale   String?
  preferredTimeZone String?

  accounts      Account[]
  sessions      Session[]
  tasks         Task[]
  recurring     RecurringTask[]

  xp            Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([identifier])
}

model Task {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String    @db.ObjectId
  title         String
  description   String?
  category      String
  xpValue       Int       @default(0)
  startAt       DateTime?
  dueAt         DateTime?
  completedAt   DateTime?
  sourceRecurringTaskId String? @db.ObjectId

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceRecurringTask RecurringTask? @relation("RecurringSource", fields: [sourceRecurringTaskId], references: [id], onDelete: SetNull)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([sourceRecurringTaskId])
  @@index([startAt])
  @@index([userId, startAt])
  @@index([userId, completedAt])
  @@index([userId, dueAt])
  @@index([userId, category])
}

enum RecurrenceType {
  DAILY
  WEEKLY
  MONTHLY
}

model RecurringTask {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  userId         String    @db.ObjectId
  title          String
  description    String?
  category       String
  xpValue        Int       @default(0)
  startAt        DateTime?
  endAt          DateTime?

  recurrenceType RecurrenceType
  timesOfDay     String[]  @default([])
  daysOfWeek     Int[]     @default([]) // 0 (Sun) - 6 (Sat)
  monthDays      Int[]     @default([]) // 1 - 31

  nextOccurrence DateTime?

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedTasks Task[]    @relation("RecurringSource")

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([userId])
  @@index([nextOccurrence])
}
