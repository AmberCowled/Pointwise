generator client {
  provider = "prisma-client-js"
}

// Connection URL configuration:
// - Prisma 6: `url` is required here for migrations (keep this)
// - Prisma 7+: `url` can be removed, connection comes from prisma.config.ts
// Runtime queries use prisma.config.ts via PrismaClient datasources
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Required for Prisma 6 migrations
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  passwordHash String?

  profileVisibility ProfileVisibility @default(PUBLIC)

  accounts Account[]
  sessions Session[]
  
  sentInvites     Invite[] @relation("Inviter")
  receivedInvites Invite[] @relation("Invitee")

  xp Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([identifier])
}

model Task {
  // Basic
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  xpAward     Int     @default(0)

  // Project relation
  projectId   String @db.ObjectId
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Type
  category    String  @default("Uncategorized")
  optional    Boolean @default(false)

  // Date/Time  
  startDate    DateTime? // Date in UTC (null = no start date)
  hasStartTime Boolean @default(false) // Track if user provided start time
  dueDate      DateTime? // Date in UTC (null = no due date)
  hasDueTime   Boolean @default(false) // Track if user provided due time

  // Status
  completedAt DateTime?
  status      TaskStatus @default(PENDING)

  // Creation
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum TaskStatus {
  PENDING
  COMPLETED
}

enum ProjectVisibility {
  PRIVATE
  PUBLIC
}

enum ProfileVisibility {
  PRIVATE
  PUBLIC
}

enum ProjectRole {
  ADMIN
  USER
  VIEWER
}

model Invite {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  
  inviterId     String      @db.ObjectId
  inviter       User        @relation("Inviter", fields: [inviterId], references: [id], onDelete: Cascade)
  
  invitedUserId String      @db.ObjectId
  invitedUser   User        @relation("Invitee", fields: [invitedUserId], references: [id], onDelete: Cascade)
  
  projectId     String      @db.ObjectId
  project       Project     @relation("ProjectInvites", fields: [projectId], references: [id], onDelete: Cascade)
  
  inviteRole    ProjectRole @default(VIEWER)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([projectId, invitedUserId]) // Prevent duplicate invites
  @@index([inviterId])
  @@index([invitedUserId])
  @@index([projectId])
  @@index([inviteRole])
}

model Project {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  visibility  ProjectVisibility @default(PRIVATE)

  // User roles (using arrays for flexibility)
  adminUserIds       String[] @default([]) @db.ObjectId // Users with admin access
  projectUserIds     String[] @default([]) @db.ObjectId // Users with standard access
  viewerUserIds      String[] @default([]) @db.ObjectId // Users with read-only access
  
  // Join requests and invites
  joinRequestUserIds String[] @default([]) @db.ObjectId // Pending join requests for public projects
  projectInvites     Invite[] @relation("ProjectInvites") // Invites to the project

  tasks              Task[] // Tasks in the project

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([name])
  @@index([description])
  @@index([visibility])
}
