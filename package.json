{
	"name": "pointwise",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"generate": "tsx scripts/generate-api.ts",
		"dev": "concurrently \"next dev\" \"tsx scripts/generate-api.ts --watch\"",
		"build": "pnpm generate && next build",
		"start": "next start",
		"pd": "pnpm install && pnpm dev",
		"format": "biome format --write ./src",
		"lint": "biome lint ./src",
		"check": "biome check ./src",
		"check:fix": "biome check --write ./src",
		"typecheck": "tsc --noEmit",
		"audit": "pnpm audit --audit-level=high",
		"postinstall": "prisma generate",
		"db:create-text-index": "node scripts/create-text-index.mjs",
		"db:push": "pnpm prisma db push"
	},
	"dependencies": {
		"@auth/prisma-adapter": "^2.11.1",
		"@google/genai": "^1.0.0",
		"@headlessui/react": "^2.2.9",
		"@prisma/client": "^6.19.0",
		"@reduxjs/toolkit": "^2.5.0",
		"@uploadthing/react": "^7.3.3",
		"ably": "^2.17.0",
		"bcrypt": "^6.0.0",
		"clsx": "^2.1.1",
		"dompurify": "^3.3.1",
		"dotenv": "^17.2.3",
		"next": "^16.0.11",
		"next-auth": "^4.24.13",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-easy-crop": "^5.5.6",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"react-redux": "^9.2.0",
		"react-syntax-highlighter": "^16.1.0",
		"remark-breaks": "^4.0.0",
		"remark-gemoji": "^8.0.0",
		"remark-gfm": "^4.0.1",
		"uploadthing": "^7.7.4",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/react-syntax-highlighter": "^15.5.13",
		"babel-plugin-react-compiler": "1.0.0",
		"concurrently": "^9.1.0",
		"mongodb": "^7.0.0",
		"prisma": "^6.19.0",
		"tailwindcss": "^4",
		"ts-morph": "^27.0.2",
		"tsx": "^4.21.0",
		"typescript": "^5"
	},
	"pnpm": {
		"overrides": {
			"preact": ">=10.28.2",
			"tar": ">=7.5.7"
		},
		"ignoredBuiltDependencies": [
			"@biomejs/biome",
			"@depot/cli",
			"@prisma/client",
			"@prisma/engines",
			"bcrypt",
			"esbuild",
			"msgpackr-extract",
			"prisma",
			"protobufjs",
			"sharp",
			"unrs-resolver"
		]
	}
}
